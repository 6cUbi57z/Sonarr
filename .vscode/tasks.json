{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install dependencies",
            "type": "shell",
            "command": "yarn install"
        },
        {
            "label": "Build Frontend",
            "type": "shell",
            "command": "yarn build",
            "dependsOn": [
                "Install dependencies"
            ],
            "problemMatcher": [
                "$gulp-tsc"
            ]
        },
        {
            "label": "Restore NuGet Packages",
            "type": "shell",
            "command": "mono ./tools/nuget/nuget.exe restore ./src/Sonarr.sln"
        },
        {
            "label": "Build Backend",
            "type": "shell",
            "command": "msbuild /p:Platform=x86 /t:Build /p:AllowedReferenceRelatedFileExtensions=.pdb ./src/Sonarr.sln",
            "dependsOn": [
                "Restore NuGet Packages",
                "Build Frontend"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}